{
  "manifest_version": 3,
  "name": "Basecamp GitHub Link Enhancer",
  "version": "1.1",
  "permissions": ["activeTab"],
  "host_permissions": ["https://3.basecamp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
